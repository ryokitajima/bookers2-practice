<h2>User info</h2>
  <% if user && user.profile_image.attached? %>
    <%= image_tag user.profile_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
<% if user %>
<ul>
<li>name <%= user.name %></li>
<li>introduction <%= user.introduction %></li>
<li>
<% if user.id == current_user.id %>
    <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</li>
</ul>
<% end %>
<h2>New book</h2>
<%= form_with model: book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book"  %>
<% end %>
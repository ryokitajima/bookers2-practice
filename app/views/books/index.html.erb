<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'user_info', user: @user,book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-hovor table-inverse">
  <thead>
    <tr>
      <th class="header1"></th>
      <th class="header2">Title</th>
      <th class="header3">Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
        <%= image_tag @user.get_image(100, 100) %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

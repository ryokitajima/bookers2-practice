<h1>Editing Book</h1>
  <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
    <label for="inputName">Title</label>
      <%= f.text_field :title, autfocus: true, id:"title", placeholder:"title" %>
    
    <label for="inputOpinion">Opinion</label>
      <%= f.text_area :body, autfocus: true, id:"body" %>
    <%= f.submit 'Update Book' %>
  <% end %>
  <%= link_to "Show",book_path(@book.id) %>
  <%= link_to "Back",books_path %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'user_info', user: @user ,book: @book %>
    </div>
<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table table-hovor table-inverse">
  <thead>
    <tr>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_image(100, 100) %>
        <% end %>
        <%= link_to @user.name, user_path(@user.id) %>
      </td>
      <td><%= link_to @books.title, book_path(@books.id) %></td>
      <td><%= @books.body %></td>
      <td>
        <% if @books.user == current_user %>
        <%= link_to "Edit", edit_book_path(@books.id) %>
        <% end %>
        </td>
      <td>
        <% if @books.user == current_user %>
        <%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
        </td>
    </tr>
  </tbody>
</table>

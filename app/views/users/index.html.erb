<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'user_info', user: @user,book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Users</h1>
<table class="table table-hovor table-inverse">
  <thead>
    <tr>
      <th class="header1">image</th>
      <th class="header2">name</th>
      <th class="header3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user_path(user.id) do %>
        <%= image_tag user.get_image(100, 100) %>
        <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
